def int montagnes(array<int> tab, int len)
  def int max = 1
  def int j = 1
  def int i = len - 2
  while i >= 0
  do
    def int x = tab[i]
    while j >= 0 && x > tab[len - j]
    do
      j --;
    end
    j ++;
    tab[len - j] = x;
    if j > max
    then
      max = j;
    end
    i --;
  end
  return max
end

