let eratostene (t:int array) max0 =
  let sum = ref( 0 )
  for i = 2 to max0 - 1 do
    if t.[i] = i then
        sum := (!sum) + i
        if max0 / i > i then
            let j = ref( i * i )
            while (!j) < max0 && (!j) > 0 do
              t.[(!j)] <- 0
              j := (!j) + i
            
  (!sum)

