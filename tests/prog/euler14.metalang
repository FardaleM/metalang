
def int next(int n)
	if n % 2 == 0 then
		return n / 2
	else
		return 3 * n + 1
	end
end

def int find(int n, array<int> m)
	if n == 1 then
		return 1
	elsif n >= 1000000 then
		return 1 + find(next(n), m)
	elsif m[n] != 0 then
		return m[n]
	else
		m[n] = 1 + find(next(n), m)
		return m[n]
	end
end

