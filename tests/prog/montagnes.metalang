integer montagnes(integer array tab, integer len) {
	integer max := 1;
	integer j := 1;
	integer i := len - 2;
	while (i >= 0) {
		integer x := tab[i];
		while (j >= 0 && x > tab[len - j]) {
			j := j - 1;
		}
		j := j + 1;
		tab[len - j] := x;
		if (j > max) {
			max := j;
		}
		i := i - 1;
	}
	return max;
}

prog {
	integer len := 0;
	read<integer>(len);
	stdin_sep();
	integer array tab[len] ( i ->
		integer x := 0;
		read<integer>(x);
		stdin_sep();
		return x;
	);
	print<integer>(montagnes(tab, len));
}
