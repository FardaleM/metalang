def int montagnes(array<int> tab, int len)
	def max = 1
	def j = 1
	def i = len - 2
	while i >= 0 do
		def int x = tab[i]
		while j >= 0 && x > tab[len - j] do
			j = j - 1
		end
		j = j + 1
		tab[len - j] = x
		if j > max then
			max = j
		end
		i = i - 1
	end
	return max
end
